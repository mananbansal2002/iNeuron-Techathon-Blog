<%- include ('../partials/header') %>

    <div class="container">
        <div class="row">

            <div class="col-md-9">
                <div class="thumbnail">
                    <img src="<%=blog.image%>" class="img-responsive" alt="">
                    <div class="caption-full">
                        <h4 class="pull-right"></h4>
                        <h4>
                            <a>
                                <%=blog.name%>
                            </a>
                            <a href="/blogs/<%=blog._id%>/edit">EDIT</a>
                            <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                                <button>DELETE</button>
                            </form>
                            <a href="/home">HOME</a>
                        </h4>
                        <p>
                            <%=blog.description%>
                        </p>
                        <p>
                            <em>Submitted by: <%=blog.author.username%></em>
                            <em>Created in: <%=blog.date%></em>
                        </p>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right" >
                        Like <%=blog.likes%>
                        <form action="/addlike/<%=blog._id%>" method="POST">
                            <button id="like">Like</button>
                        </form>
                            <a class="btn btn-success" href="/blogs/<%=blog._id%>/comments/new">Add a new comment</a>
                    </div>
                    <hr>
                    <% blog.comments.forEach(function(comment) { %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong>
                                    <%=comment.author.username%>
                                </strong>
                                <span class="pull-right">10 days ago</span>
                                <p>
                                    <%= comment.text %>
                                </p>
                            </div>
                        </div>
                        <% }) %>

                </div>
            </div>
        </div>
    </div>
    </div>
    
<script>
    document.querySelector('#like').onclick = function(){
        <%blog.likes=blog.likes+1%> alert("like is <%=blog.likes%>")
    };
 </script>
    



    <%- include ('../partials/footer') %>