<%- include ('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit your blog post</h1>
        <div style="width: 30%; margin: 25px auto;">    
            <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[name]" placeholder="name" value="<%=blog.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" placeholder="image link" value="<%=blog.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[description]" placeholder="description" value="<%=blog.description%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[genre]" placeholder="genre" value="<%=blog.genre%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                <a href="/home">Go back</a>
            </form>
        </div>
    </div>
</div>
<%- include ('../partials/footer') %>